<phpunit
  coverage-text="true"
  colors="always"
  verbose="true"
  bootstrap="./tests/bootstrap.php">
  <testsuites>
    <testsuite name="Auth0 PHP SDK Test Suite">
      <directory>./tests</directory>
    </testsuite>
  </testsuites>

  <filter>
    <whitelist>
      <directory suffix=".php">./src/</directory>
    </whitelist>
  </filter>
</phpunit>
